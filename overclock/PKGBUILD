pkgver=1 pkgrel=1
pkgname=overclock
depends=(nvidia-utils)
makedepends=(clang cuda)
arch=(x86_64)

source=(overclock.c overclock.service)
sha256sums=('412c823fe00f5e89c932efac5204a54f06379bcd244382c865bbed88fc120bd8'
            'c068a16a71489f90b4226c535c1f8ec540f3d5f20e4b1297c52d82ae59423ca8')

build() {
    clang -lnvidia-ml -o overclock overclock.c
}

package() {
    install -D overclock $pkgdir/usr/bin/overclock
    install -Dm644 overclock.service $pkgdir/usr/lib/systemd/system/overclock.service
}
