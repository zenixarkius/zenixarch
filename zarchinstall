#!/usr/bin/bash
set -euo pipefail
(( EUID == 0 ))

export PACKAGES=(
  base
  btrfs-progs
  cachyos-keyring
  cachyos-mirrorlist
  cachyos-v3-mirrorlist
  foot
  git
  grimblast-git
  hyprland
  hyprpaper
  hyprpicker
  iptables-nft
  iwd
  mullvad-browser-bin
  neovim
  pass-otp
  pipewire-jack
  pipewire-pulse
  sbctl
  signal-desktop
  ttf-liberation
  ttf-nerd-fonts-symbols
  wireguard-tools
  wl-clipboard
)

export UNITS=(
  btrfs-scrub@-.timer
  fstrim.timer
  iwd.service
  nftables.service
  overclock.service
  rgb.service
  systemd-timesyncd.service
  wireguard.service
)

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

installation() {
  nvme id-ns -H "/dev/${DISK}" | grep -q '1.*4096' && nvme format --lbaf=1 --force "/dev/${DISK}"

  sgdisk --zap-all "/dev/${DISK}"
  sgdisk -g "/dev/${DISK}"
  sgdisk -I -n 1:0:+512M -t 1:ef00 -c 1:bootfs "/dev/${DISK}"
  sgdisk -I -n 2:0:0 -t 2:8300 -c 2:rootfs "/dev/${DISK}"

  [[ ${DISK} =~ [0-9]$ ]] && DISK="${DISK}p"

  mkfs.fat -F 32 "/dev/${DISK}1"

  echo "${PASS}" | cryptsetup -q luksFormat -h sha512 -i 5000 -s 512 "/dev/${DISK}2"
  echo "${PASS}" | cryptsetup open "/dev/${DISK}2" cryptroot

  mkfs.btrfs -f /dev/mapper/cryptroot

  mount /dev/mapper/cryptroot /mnt
  btrfs su cr /mnt/@
  btrfs su cr /mnt/@home
  btrfs su cr /mnt/@var_log
  btrfs su cr /mnt/@var_cache
  btrfs su cr /mnt/@var_lib_libvirt_images
  chattr +C /mnt/@var_{log,cache,lib_libvirt_images}
  umount /mnt

  mount -o defaults,compress-force=zstd,noatime,subvol=@ /dev/mapper/cryptroot /mnt
  mkdir -p /mnt/{boot,home,var/{log,cache,lib/libvirt/images}}
  mount -o defaults,nodev,nosuid,noexec,umask=0077 "/dev/${DISK}1" /mnt/boot
  mount -o defaults,compress-force=zstd,noatime,nodev,nosuid,subvol=@home /dev/mapper/cryptroot /mnt/home
  mount -o defaults,compress-force=zstd,noatime,nodev,nosuid,noexec,subvol=@var_log /dev/mapper/cryptroot /mnt/var/log
  mount -o defaults,compress-force=zstd,noatime,nodev,nosuid,noexec,subvol=@var_cache /dev/mapper/cryptroot /mnt/var/cache
  mount -o defaults,compress-force=zstd,noatime,nodev,nosuid,noexec,subvol=@var_lib_libvirt_images /dev/mapper/cryptroot /mnt/var/lib/libvirt/images

  pacstrap /mnt base iptables-nft

  genfstab -U /mnt >> /mnt/etc/fstab

  useradd -R /mnt -m user
  chpasswd -R /mnt <<< "root:${PASS}"

  cp -r "${DIR}" /mnt/home/user/.zenixarch
  chown user:user -R /mnt/home/user/.zenixarch

  arch-chroot /mnt DIR=/home/user/.zenixarch bash -c 'set -euo pipefail; configuration'
}

configuration() {
  if ! grep -q '^en_US.UTF-8' /etc/locale.gen; then
    install -Dm644 <(echo LANG=en_US.UTF-8) /etc/locale.conf
    sed -i '/^#en_US.UTF-8/s/^#//' /etc/locale.gen
    locale-gen
  fi

  [[ $(readlink /etc/localtime) != *New_York ]] && ln -sf /usr/share/zoneinfo/America/New_York /etc/localtime && hwclock --systohc

  find "${DIR}"/{etc,home} -type f | while read -r src; do
    args=(-Dm644)
    [[ ${src} == */home/user/* ]] && args+=(-o user -g user)
    cmp -s "${src}" "${src#"${DIR}"}" || install "${args[@]}" "${src}" "${src#"${DIR}"}"
  done

  for d in /home/user/.{cache,local}; do
    [[ $(readlink "${d}") == /tmp ]] || { ln -sfn /tmp "${d}" && chown user:user "${d}"; }
  done

  if ! [[ $(pacman -Q cachyos-keyring cachyos-mirrorlist cachyos-v3-mirrorlist) ]]; then
    pacman-key --add <(curl 'https://keyserver.ubuntu.com/pks/lookup?op=get&search=0x882dcfe48e2051d48e2562abf3b607488db35a47')
    pacman-key --lsign-key F3B607488DB35A47
    pacman -U --noconfirm https://mirror.cachyos.org/repo/x86_64/cachyos/{cachyos-keyring-20240331-1-any,cachyos-mirrorlist-22-1-any,cachyos-v3-mirrorlist-22-1-any,pacman-7.1.0.r7.gb9f7d4a-3-x86_64}.pkg.tar.zst
  fi

  pacman -S --noconfirm --needed "${PACKAGES[@]}"

  if ! [[ $(pacman -Q linux-zenixark) ]]; then (
    cd "${DIR}"/linux-zenixark
    sed -i "s|name=.*=cryptroot|name=$(blkid -s UUID -o value /dev/"$(basename /sys/class/block/"$(readlink /dev/mapper/cryptroot | cut -c4-)"/slaves/*)")=cryptroot|" config
    pacman -S --noconfirm --needed base-devel bc clang lld llvm perl python
    mkdir build
    cp ./* build
    (cd build
    runuser user -c makepkg
    pacman -U --noconfirm linux-zenixark*.pkg.tar.zst)
    pacman -Rcns --noconfirm base-devel bc clang lld llvm perl python
    rm -rf build
  ) fi

  if ! [[ $(pacman -Q overclock) ]]; then (
    cd "${DIR}"/overclock
    pacman -S --noconfirm --needed base-devel
    runuser user -c makepkg
    pacman -U --noconfirm overclock*.pkg.tar.zst
    pacman -Rcns --noconfirm base-devel
    rm -rf nvml.h pkg src overclock*.pkg.tar.zst
  ) fi

  if ! [[ $(pacman -Q openrgb | awk '{print $2}') == 1.0rc1-2 ]]; then
    pacman -Rcns --noconfirm openrgb || :
    pacman -U --noconfirm https://archive.archlinux.org/repos/2025/08/31/extra/os/x86_64/openrgb-1.0rc1-2-x86_64.pkg.tar.zst
  fi

  sed -i 's|^;.*cookie-file.*|cookie-file = /tmp/.pulse-cookie|' /etc/pulse/client.conf
  sed -i 's|which|command -v|' /usr/lib/password-store/extensions/otp.bash

  systemctl enable "${UNITS[@]}"
  systemctl mask systemd-boot-random-seed.service

  for svc in $(systemctl list-unit-files --type=service --state=enabled --no-legend | awk '{print $1}'); do
    [[ ${UNITS[*]} == *${svc}* ]] || [[ ${svc} == getty@* ]] || systemctl disable "${svc}"
  done

  if sbctl status | grep -q 'Setup.*Enabled' && [[ -e /dev/tpm0 ]]; then
    sbctl create-keys
    sbctl enroll-keys --tpm-eventlog
    sbctl sign -s /boot/EFI/BOOT/BOOTX64.EFI
  fi

  exit
}

[[ -d /run/archiso ]] || configuration

: "${DISK}:?" "${PASS}:?"

read -rp $'You probably shouldn\'t be running this if you aren\'t Zenixark.\nType IK to continue to disk wiping: ' IK
[[ ${IK} == IK ]]

umount -R /mnt &>/dev/null || :
cryptsetup close cryptroot &>/dev/null || :

export -f configuration
installation
